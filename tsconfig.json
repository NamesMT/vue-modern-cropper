{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./packages/*"],
      "@/*": ["./docs/*"]
    },
    "sourceMap": true
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": [
    "vite.config.ts",
    "docs/**/*.ts",
    "docs/**/*.d.ts",
    "docs/**/*.tsx",
    "docs/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue"
  ]
}
